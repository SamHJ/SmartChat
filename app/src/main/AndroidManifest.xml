<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="niwigh.com.smartchat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:name="niwigh.com.smartchat.Activity.SmartMessenger"
        android:allowBackup="true"
        android:icon="@drawable/smartchat_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/smartchat_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning,InnerclassSeparator">
        <activity android:name="niwigh.com.smartchat.Activity.AddGroupToCollection"/>
        <activity android:name="niwigh.com.smartchat.Activity.UpdateGroupCollection" />

        <meta-data
            android:name="com.google.android.gms.ads.niwigh.com.smartchat"
            android:value="@string/admobAppID" />
        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true" />

        <activity android:name="niwigh.com.smartchat.Activity.AddFeeds" />
        <activity
            android:name="niwigh.com.smartchat.Activity.SplashScreen"
            tools:ignore="InnerclassSeparator" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/easy_to_use" />

        <service
            android:name="niwigh.com.smartchat.Notifications.FirebaseIdService"
            android:enabled="true"
            android:exported="true"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name="niwigh.com.smartchat.Notifications.MyFirebaseMessagingService"
            android:enabled="true"
            android:exported="true"
            tools:ignore="InnerclassSeparator">

            <!-- android:permission="com.google.android.c2dm.permission.SEND"> -->
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <!-- <action android:name="com.google.android.c2dm.intent.RECEIVE" /> -->
            </intent-filter>
        </service>

        <activity
            android:name="niwigh.com.smartchat.Activity.OnboardingIntroSlide"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="niwigh.com.smartchat.Activity.Login"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.RecoverPassword"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.Register"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.UserHome"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.RegisterSetup"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name="niwigh.com.smartchat.Activity.AddNewPost"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.PostDetail"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.Settings"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.ProfileSettings"
            android:label="@string/title_activity_profile_settings"
            android:theme="@style/AppTheme"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.Profile"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.FindFriends"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.PersonProfile"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.MessagingArea"
            android:windowSoftInputMode="adjustResize"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="havotechstudios.com.smartmessenger.TARGETNOTIFICATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="niwigh.com.smartchat.Activity.AllMyPosts"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.ViewPersonPosts"
            android:parentActivityName="niwigh.com.smartchat.Activity.UserHome"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.MessagingAreaBackground"
            android:parentActivityName="niwigh.com.smartchat.Activity.Settings"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.AddNewVideoPost"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.PostVideoDetails"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.FullModeProfileImage"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.FullPersonProfileImage"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.FullMessageImageView"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.FullMessageVideoView"
            tools:ignore="InnerclassSeparator" />

        <service
            android:name="niwigh.com.smartchat.Notifications.FirebaseNotificationService"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <activity
            android:name="niwigh.com.smartchat.Activity.Groups"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.AddNewGroup"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.NotificationsSettings"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.AssociatedGroups"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.GroupMessagingArea"
            android:windowSoftInputMode="adjustResize"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.GroupInfo"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.AddParticipantsToGroup"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="niwigh.com.smartchat.Activity.GroupSettings"
            tools:ignore="InnerclassSeparator" />

        <provider
            android:name="niwigh.com.smartchat.provider.GenericFileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

    </application>

</manifest>